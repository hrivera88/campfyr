{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": ["src"],
  "exclude": ["tests", "node_modules"],
  "ts-node": {
    "esm": true
  }
}
